<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="@drawable/bg5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.newapp.MainActivity1" >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="HP ANDROID APP"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/fa_tv2"
        android:textColor="#FFBD21"
        android:textSize="36dp"
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:text="COUNTER :0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/fa_bt1"
        android:drawableRight="@drawable/tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="INCREMENT+" />

    <Button
        android:id="@+id/fa_btt2"
        android:layout_width="wrap_content"
        android:background="#C182E0"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv1"
        android:layout_below="@+id/fa_bt1"
        android:layout_marginTop="30dp"
        android:drawableRight="@android:drawable/ic_delete"
        android:text="Decrementor-" />

    <ImageButton
        android:id="@+id/fa_bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fa_btt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:src="@android:drawable/ic_delete" />

    <Button
        android:id="@+id/fa_b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fa_bt3"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/fa_bt3"
        android:text="Open Second" />

</RelativeLayout>
