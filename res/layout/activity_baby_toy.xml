<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/pokemon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.newapp.BabyToy" >
    
      <TextView
        android:id="@+id/bby_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:text="BABY TOY"
        android:textSize="40dp"
        android:textStyle="bold|normal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/bby_iv1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/bby_tv1"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/bby_tv1"
        android:src="@drawable/baby" />

    <ImageButton
        android:id="@+id/fa_ibt"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/back" />

    <Button
        android:id="@+id/fa_b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fa_b1"
        android:layout_below="@+id/fa_b1"
        android:layout_marginTop="17dp"
        android:drawableRight="@drawable/lion"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="SHER KHAN " />

    <Button
        android:id="@+id/fa_b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fa_b2"
        android:layout_below="@+id/fa_b2"
        android:layout_marginTop="17dp"
        android:drawableRight="@drawable/ele"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="HATHA " />

    <Button
        android:id="@+id/fa_b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fa_b1"
        android:layout_below="@+id/fa_b3"
        android:layout_marginTop="18dp"
        android:drawableRight="@drawable/duck"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="BATAK " />

    <Button
        android:id="@+id/fa_b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fa_b1"
        android:layout_alignBottom="@+id/fa_b1"
        android:layout_toRightOf="@+id/fa_b1"
        android:drawableRight="@drawable/crow"
        android:text="KAUWA"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fa_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bby_iv1"
        android:layout_marginTop="59dp"
        android:drawableRight="@drawable/horse"
        android:text="GHORA "
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fa_b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fa_b2"
        android:layout_toRightOf="@+id/fa_b3"
        android:drawableRight="@drawable/murga"
        android:text="MURGA"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>
